<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_JNKEEPER</name>
	<author>jnilla.com</author>
	<creationDate>Jun 2019</creationDate>
	<copyright>Copyright (C) 2018 jnilla.com. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>digitalcomputer2142@gmail.com</authorEmail>
	<authorUrl>jnilla.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_SYSTEM_JNKEEPER_XML_DESCRIPTION</description>
	
	<files>
		<folder>language</folder>
		<filename plugin="jnkeeper">jnkeeper.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
	</files>
	
	<updateservers>
		<server type="extension" priority="1" name="Jnilla - Jn Keeper">https://www.jnilla.com/downloads/joomla/plg_system_jnkeeper/updates.xml</server>
	</updateservers>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="automatic_log_path"	
					label="PLG_SYSTEM_JNKEEPER_AUTOMATIC_LOG_PATHFIELD_LABEL"
					description="PLG_SYSTEM_JNKEEPER_AUTOMATIC_LOG_PATHFIELD_DESCRIPTION"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="automatic_tmp_path"	
					label="PLG_SYSTEM_JNKEEPER_AUTOMATIC_TMP_PATHFIELD_LABEL"
					description="PLG_SYSTEM_JNKEEPER_AUTOMATIC_TMP_PATHFIELD_DESCRIPTION"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>



